{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "ui",
    "distDir": "ui",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tray",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons\\icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.visual-idler.tray",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    }
  }
}
