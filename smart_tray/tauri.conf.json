{
  "build": {
    "beforeDevCommand": "uglifyjs ./smart_tray/ui/template.js -o ./smart_tray/ui/main.js -c -m",
    "beforeBuildCommand": "uglifyjs ./smart_tray/ui/template.js -o ./smart_tray/ui/main.js -c -m",
    "devPath": ["ui/index.html", "ui/leaves.svg", "ui/styles.css", "ui/main.js"],
    "distDir": ["ui/index.html", "ui/leaves.svg", "ui/styles.css", "ui/main.js"],
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tray",
    "version": "0.0.1"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons\\icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true
      }
    },
    "bundle": {
      "active": false,
      "identifier": "com.visual-idler.tray"
    },
    "windows": [
      {
        "label": "controller",
        "fullscreen": false,
        "height": 425,
        "resizable": true,
        "title": "Controller",
        "width": 900,
        "center": true,
        "focus": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'"
    }
  }
}
